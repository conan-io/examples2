include(default)

[settings]
compiler.sanitizer=Address

[conf]
{% if compiler == "msvc" %}
tools.build:cflags=['/fsanitize=address']
tools.build:cxxflags=['/fsanitize=address']
{% else %}
tools.build:cflags=['-fsanitize=address']
tools.build:cxxflags=['-fsanitize=address']
{% endif %}

[runenv]
ASAN_OPTIONS=log_path={{ package_metadata_folder }}/sanitizer